<%- include("partials/head") %>
<section class="container border-light mt-3 p-2 border">
    <h2>Edit Todo</h2>
    <form action="/todos/<%=todo._id%>?_method=put" method="post">
        <div class="form-floating mb-3">
            <input type="text" class="form-control bg-dark text-light" name="text" value="<%=todo.text%>" id="floatingInput" placeholder="New todo" />
            <label for="floatingInput">Edit todo</label>
        </div>
        <div><button class="btn btn-outline-light">Edit</button></div>
    </form>
</section>
